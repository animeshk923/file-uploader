generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

/// Session will be managed by PrismaSessionStore
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

/// User model
model User {
  id       Int      @id @default(autoincrement())
  fullName String
  email    String   @unique
  password String // scalar field
  Folder   Folder[]
}

model Folder {
  folderId   Int    @id @unique @default(autoincrement())
  userId     Int
  folderName String @unique
  folderUser User   @relation(fields: [userId], references: [id])
  file       File[]
}

model File {
  fileId     Int    @id @unique @default(autoincrement())
  fileName   String @unique
  folderId   Int // scalar relational field
  fileFolder Folder @relation(fields: [folderId], references: [folderId])
}
