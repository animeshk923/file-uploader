generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

/// Session will be managed by PrismaSessionStore
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
/// User model
model User {
  id       Int      @id @default(autoincrement())
  fullName String
  email    String   @unique
  password String // scalar field
  Folder   Folder[]
}

model Folder {
  folder_id  User    @relation(fields: [userId], references: [id])
  userId     Int     @unique
  FolderName String  @unique
  File      File[]
}

model File {
  file_id  Folder @relation(fields: [folderId], references: [userId])
  fileName String @unique
  folderId Int // scalar relational field
}
